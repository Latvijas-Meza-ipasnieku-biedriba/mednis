{
    "name": "mednis",
    "private": true,
    "scripts": {
        "start": "cross-env NODE_ENV=development webpack-dev-server",
        "build": "cross-env NODE_ENV=production webpack",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint '{**/*,*}.{js,ts,tsx}'",
        "format": "prettier --write \"**/*.+(js|ts|tsx|json|css|scss|md|mdx|html)\"",
        "android": "npm run deploy && npm run android:install && npm run android:start",
        "deploy": "npm run build && npx cap copy",
        "android:install": "cd android && gradlew installDebug",
        "android:start": "adb shell am start -n lv.mezaipasnieki.mednis/lv.mezaipasnieki.mednis.MainActivity"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.+(js|ts|tsx|json|css|md|mdx|html)": [
            "prettier --write",
            "git add"
        ],
        "*.+(js|ts|tsx)": [
            "eslint --cache --fix",
            "git add",
            "jest --bail --findRelatedTests"
        ]
    },
    "browserslist": [
        "last 2 iOS major versions",
        "last 2 Android major versions"
    ],
    "dependencies": {
        "@byteowls/capacitor-oauth2": "2.1.0",
